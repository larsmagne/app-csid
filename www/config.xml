<?xml version='1.0' encoding='utf-8'?>
<widget id="no.ingebrigtsen.csid.CSID--Concerts" version="0.0.36"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0"
	xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Concerts in Oslo</name>
    <description>
        Concerts in Oslo
    </description>
    <author email="larsi@gnus.org" href="http://lars.ingebrigtsen.no/">
        Lars Magne Ingebrigtsen
    </author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <gap:plugin name="org.apache.cordova.splashscreen" />

    <access origin="*" browserOnly="true"/>
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    
    <feature name="InAppBrowser"> <param name="ios-package" value="CDVInAppBrowser" /> </feature>

    <gap:plugin name="org.apache.cordova.statusbar" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <feature name="StatusBar">
      <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>

    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.file" />

    <feature name="Device">
      <param name="ios-package" value="CDVDevice" onload="true" />
    </feature>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/csid-icon.png" />
    <icon src="www/csid-icon.png" platform="android" density="ldpi" />
    <icon src="www/csid-icon.png" platform="android" density="mdpi" />
    <icon src="www/csid-icon.png" platform="android" density="hdpi" />
    <icon src="www/csid-icon.png" platform="android" density="xhdpi" />

    <icon src="csid-icon.png" platform="ios" width="512" height="512" />
    <icon src="csid-icon72.png" platform="ios" width="72" height="72" />
    <icon src="csid-icon57.png" platform="ios" width="57" height="57" />
    <icon src="csid-icon152.png" platform="ios" width="152" height="152" />
    
    <preference name="SplashScreen" value="screen"/>
    <!-- iPhone / iPod Touch  -->
    <icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icon-60x2.png" gap:platform="ios" width="120" height="120" />
    <!-- iPad -->
    <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icon-76@x2.png" gap:platform="ios" width="152" height="152" />
    <!-- Settings Icon -->
    <icon src="icon-29.png" gap:platform="ios" width="29" height="29" />
    <icon src="icon-29x2.png" gap:platform="ios" width="58" height="58" />
    <!-- Spotlight Icon -->
    <icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icon-40x2.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone and iPod touch -->
    <gap:splash src="splash-320.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="splash-320x2.png" gap:platform="ios" width="640" height="960" />
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="splash-640.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="splash-568.png" gap:platform="ios" width="568" height="320" />
    <gap:splash src="splash-320x568.png" gap:platform="ios" width="320" height="568" />
      <!-- iPad -->
    <gap:splash src="splash-768.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="splash-768x2" gap:platform="ios" width="1536" height="2048" />
    <!-- Retina iPad -->
    <gap:splash src="splash-1024.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="splash-1024x2.png" gap:platform="ios" width="2048" height="1536" />
    <gap:splash src="splash.png" />
</widget>
