<?xml version='1.0' encoding='utf-8'?>

<widget id="no.ingebrigtsen.csid" version="1.3.16"
	android-versionCode="103016"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">
    <name>Concerts in Oslo</name>
    <description>
        Concerts in Oslo
    </description>
    <author email="larsi@gnus.org" href="http://lars.ingebrigtsen.no/">
        Lars Magne Ingebrigtsen
    </author>

    <content src="index.html" />

    <access origin="*" browserOnly="true"/>

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <feature name="StatusBar">
      <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>

    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="iosPersistentFileLocation" value="Compatibility" />

    <feature name="Device">
      <param name="ios-package" value="CDVDevice" onload="true" />
    </feature>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    
    <preference name="Orientation" value="portrait" />
    
    <preference name="fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <platform name="android">
      <icon density="ldpi" background="@color/background" foreground="images/mats-ldpi.png" />
      <icon density="mdpi" background="@color/background" foreground="images/mats-mdpi.png" />
      <icon density="hdpi" background="@color/background" foreground="images/mats-hdpi.png" />
      <icon density="xhdpi" background="@color/background" foreground="images/mats-xhdpi.png" />
      <icon density="xxhdpi" background="@color/background" foreground="images/mats-xxhdpi.png" />
      <icon density="xxxhdpi" background="@color/background" foreground="images/mats-xxxhdpi.png" />
    </platform>

    <icon src="images/icon72.png" platform="ios" width="72" height="72" />
    <icon src="images/icon57.png" platform="ios" width="57" height="57" />
    <icon src="images/icon152.png" platform="ios" width="152" height="152" />

    <!-- iPhone / iPod Touch  -->
    <icon src="images/icon-60.png" platform="ios" width="60" height="60" />
    <icon src="images/icon-120.png" platform="ios" width="120" height="120" />
    <!-- iPad -->
    <icon src="images/icon-76.png" platform="ios" width="76" height="76" />
    <!-- Settings Icon -->
    <icon src="images/icon-29.png" platform="ios" width="29" height="29" />
    <icon src="images/icon-58.png" platform="ios" width="58" height="58" />
    <icon src="images/icon-87.png" platform="ios" width="87" height="87" />
    <!-- Spotlight Icon -->
    <icon src="images/icon-40.png" platform="ios" width="40" height="40" />
    <icon src="images/icon-80.png" platform="ios" width="80" height="80" />

    <!-- iPhone and iPod touch -->
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
      <!-- iPad -->
    <icon src="images/icon-50.png" platform="ios" width="50" height="50" />
    <icon src="images/icon-100.png" platform="ios" width="100" height="100" />
    <icon src="images/icon-114.png" platform="ios" width="114" height="114" />
    <icon src="images/icon-144.png" platform="ios" width="144" height="144" />
    <icon src="images/icon-167.png" platform="ios" width="167" height="167" />
    <icon src="images/icon-1024.png" />
    
    <!-- Retina iPad -->

    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <splash src="images/splash.png" />
    
    <platform name="ios">
      <!-- images are determined by width and height. The following are supported -->
      <splash src="images/splash-320.png" width="320" height="480"/>
      <splash src="images/splash-320x2.png" width="640" height="960"/>
      <splash src="images/splash-768.png" width="768" height="1024"/>
      <splash src="images/splash-768x2.png" width="1536" height="2048"/>
      <splash src="images/splash-1024.png" width="1024" height="768"/>
      <splash src="images/splash-1024x2.png" width="2048" height="1536"/>
      <splash src="images/splash-640.png" width="640" height="1136"/>
      <splash src="images/splash-750.png" width="750" height="1334"/>
      <splash src="images/splash-1242.png" width="1242" height="2208"/>
      <splash src="images/splash-2208.png" width="2208" height="1242"/>
    </platform>

    <platform name="android">
      <preference name="android-minSdkVersion" value="23" />
    </platform>

    <platform name="ios">
      <config-file parent="NSCalendarsUsageDescription" target="*-Info.plist">
	<string>This app can export events you're attending to your calendar.</string>
      </config-file>
      <config-file parent="NSLocationWhenInUseUsageDescription" target="*-Info.plist">
	<string>This app can show you the venues that are closest.</string>
      </config-file>
      <config-file parent="ITSAppUsesNonExemptEncryption" mode="add" target="*-Info.plist">
	<false/>
      </config-file>
    </platform>

</widget>
