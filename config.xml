<?xml version='1.0' encoding='utf-8'?>
<widget id="no.ingebrigtsen.csid.CSID--Concerts" version="0.0.18" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Concerts in Oslo</name>
    <description>
        Concerts in Oslo
    </description>
    <author email="larsi@gnus.org" href="http://lars.ingebrigtsen.no/">
        Lars Magne Ingebrigtsen
    </author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/csid-icon.png" />
    <icon src="www/csid-icon.png" platform="android" density="ldpi" />
    <icon src="www/csid-icon.png" platform="android" density="mdpi" />
    <icon src="www/csid-icon.png" platform="android" density="hdpi" />
    <icon src="www/csid-icon.png" platform="android" density="xhdpi" />
    <icon src="www/csid-icon.png" platform="ios" width="512" height="512" />

    <gap:plugin name="org.apache.cordova.splashscreen" />
    <preference name="SplashScreen" value="screen"/>
    <!-- iPhone / iPod Touch  -->
    <icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icon-60x2.png" gap:platform="ios" width="120" height="120" />
    <!-- iPad -->
    <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icon-76@x2.png" gap:platform="ios" width="152" height="152" />
    <!-- Settings Icon -->
    <icon src="icon-29.png" gap:platform="ios" width="29" height="29" />
    <icon src="icon-29x2.png" gap:platform="ios" width="58" height="58" />
    <!-- Spotlight Icon -->
    <icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icon-40x2.png" gap:platform="ios" width="80" height="80" />

    <gap:splash src="splash.png" />
</widget>
